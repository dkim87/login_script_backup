set surround
set visualbell
set noerrorbells
set scrolloff=999

inoremap ,s <esc>
nnoremap ,s <esc>:w<cr>
vnoremap ,s <esc>:w<cr>
nnoremap ,q <esc>:q<cr>

"colemak-vim
noremap n j
noremap N J

noremap e k
noremap E K

noremap i l
noremap I L

noremap j e
noremap J E

noremap k n
noremap K N

noremap l i
noremap L I

" nnoremap ,x :action Run<cr> " the document says to use <Action> instead of
" :action, and <Action> does not work with noremap
nnoremap ,dr :action Debug<cr>
nnoremap ,n :action Generate<cr>

map ,x <Action>(Run)
map ,iv <Action>(IntroduceVariable)

map ,rc <Action>(ContextRun)
map ,dc <Action>(ContextDebug)

map ,rt <Action>(RunConfigurationAsAction_Run_All Tests_default_target)
map ,rr <Action>(RunConfigurationAsAction_Run_start status_default_target)

map ,t <Action>(ActivateTerminalToolWindow)
map <c-t> <Action>(ActivateTerminalToolWindow)


nnoremap <c-o> :action Back<cr>
nnoremap <c-i> :action Forward<cr>


map gh <Action>(ShowErrorDescription)
