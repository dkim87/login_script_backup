{
    "title" : "MacVim_dq",
    "rules" : [
        {
            "description" : "map capslock to command (and ctrl for vim)",
            "manipulators":[
                {
                    "type" : "basic",
                    "from" : {
                        "key_code" : "caps_lock",
                        "modifiers" : {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to" : [
                        {
                            "key_code" : "right_control"
                        }
                    ],
                    "conditions" : [
                        {
                            "type" : "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.vim\\.MacVim$"
                            ]
                        }
                    ]
                },
                {
                    "type" : "basic",
                    "from" : {
                        "key_code" : "caps_lock",
                        "modifiers" : {
                            "optional" : [
                                "any"
                            ]
                        }
                    },
                    "to" : [
                        {
                            "key_code" : "right_command"
                        }
                    ],
                    "conditions":[
                        {
                            "type" : "frontmost_applications_unless",
                            "bundle_identifiers" : [
                                "^org\\.vim\\.MacVim$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
