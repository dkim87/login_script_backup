
{
    "title" : "(dq) Swap option space and command space",
    "rules" : [
        {
            "description" : "Swap option space and command space (dq)",
            "manipulators":[
                {
                    "type" : "basic",
                    "from" : {
                        "key_code" : "spacebar",
                        "modifiers" : {
                            "mandatory": [
                                "left_option"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to" : [
                        {
                            "key_code" : "spacebar",
                            "modifiers" : [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions" : [
                        {
                            "type" : "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.vim\\.MacVim$",
                                "^com.googlecode.iterm2$",
                                "^org.virtualbox.app.VirtualBoxVM$"
                            ]
                        }
                    ]
                },
                {
                    "type" : "basic",
                    "from" : {
                        "key_code" : "spacebar",
                        "modifiers" : {
                            "mandatory" : [
                                "left_command"
                            ],
                            "optional" : [
                                "any"
                            ]
                        }
                    },
                    "to" : [
                        {
                            "key_code" : "spacebar",
                            "modifiers" : [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions":[
                        {
                            "type" : "frontmost_application_if",
                            "bundle_identifiers" : [
                                "^org\\.vim\\.MacVim$",
                                "^com.googlecode.iterm2$",
                                "^org.virtualbox.app.VirtualBoxVM$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
