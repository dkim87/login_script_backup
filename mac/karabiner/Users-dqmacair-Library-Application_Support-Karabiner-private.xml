<?xml version="1.0"?>
<root>

    <!--RSTUDIO-->
    <appdef>
        <appname>RSTUDIO</appname>
        <equal>org.rstudio.RStudio</equal>
    </appdef>
    <item>
        <name>RStudio: application to ctrl</name>
        <identifier>private.rstudiodef</identifier>
        <only>RSTUDIO</only>
        <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::CONTROL_L</autogen>
    </item>

    <item>
        <name>RStudio: Simulaneous ,s for Esc</name>
        <identifier>private.rstudioesc</identifier>
        <only>RSTUDIO</only>
        <autogen>
            __SimultaneousKeyPresses__
            KeyCode::COMMA, KeyCode::D,
            KeyCode::ESCAPE
        </autogen>
    </item>
    <item>
        <name>RStudio: a to z</name>
        <identifier>private.atoz</identifier>
        <only>RSTUDIO</only>
        <autogen>
            __KeyToKey__
            KeyCode::Z,
            KeyCode::ESCAPE
        </autogen>
    </item>

